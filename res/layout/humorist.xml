<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Please select a source of humor..."
		    android:textSize="16sp" />

		<LinearLayout
		    android:id="@+id/linearLayout1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.42"
		    android:overScrollMode="always"
		    android:visibility="visible" >

		    <Button
		        android:id="@+id/humor_button1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Joke" />

		    <Button
		        android:id="@+id/humor_button2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Jokes!" />

		    <Button
		        android:id="@+id/humor_button3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Quote!" />

		    <Button
		        android:id="@+id/humor_button4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Pun" />

		    <Button
		        android:id="@+id/humor_button5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Quote" />
		</LinearLayout>

		<WebView
		    android:id="@+id/webView2"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:clickable="true"
		    android:layout_weight="5.68"  
		    android:focusableInTouchMode="true" />s
	</LinearLayout>